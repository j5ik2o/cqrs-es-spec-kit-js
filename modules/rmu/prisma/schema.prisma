generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x", "rhel-openssl-3.0.x", "rhel-openssl-1.0.x"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Carts {
  id        String       @id @db.VarChar(64)
  deleted   Boolean
  name      String       @db.VarChar(200)
  createdAt DateTime     @db.DateTime(0) @map("created_at")
  updatedAt DateTime     @db.DateTime(0) @map("updated_at")
  items     CartItems[]

  @@map("carts")
}

model CartItems {
  id        String   @id @db.VarChar(64)
  cartId    String   @db.VarChar(64) @map("cart_id")
  name      String   @db.VarChar(200)
  quantity  Int
  price     Decimal  @db.Decimal(10, 2)
  createdAt DateTime @db.DateTime(0) @map("created_at")
  updatedAt DateTime @db.DateTime(0) @map("updated_at")
  carts     Carts    @relation(fields: [cartId], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "cart_items_ibfk_1")

  @@index([cartId], map: "cart_id")
  @@map("cart_items")
}
