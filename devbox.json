{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.13.6/.schema/devbox.schema.json",
  "packages": [
    "nodejs_22@latest",
    "pnpm@latest",
    "docker@latest",
    "docker-compose@latest",
    "awscli2@latest",
    "jq@latest",
    "curl@latest"
  ],
  "env": {
    "AWS_REGION": "ap-northeast-1"
  },
  "shell": {
    "init_hook": [
      "echo 'ðŸš€ CQRS/ES Spec Kit JS Development Environment'",
